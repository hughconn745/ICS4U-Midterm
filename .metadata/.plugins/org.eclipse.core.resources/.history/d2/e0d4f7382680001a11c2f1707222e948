#include <iostream>
#include "Main.h"
#include "Array_Resize.h"

using namespace std;

void resizeArray(int new_size) {


	char * buffer[para_size + new_size];

	for(int i = 0; i < para_size; i++) {
		buffer[i] = new char[ARRAY_LENGTH];
	}


	for(int i = 0; i < para_size; i++) {
		for(int j = 0; j < ARRAY_LENGTH; j++)
			buffer[i][j] = array[i][j];
	}

	cout << array << endl;
	cout << buffer << endl;
	array = buffer;
	cout << array << endl;
	cout << buffer << endl;

	delete []buffer;

}
